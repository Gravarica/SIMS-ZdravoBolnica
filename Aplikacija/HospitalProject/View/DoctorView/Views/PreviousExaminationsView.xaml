<UserControl x:Class="HospitalProject.View.DoctorView.Views.PreviousExaminationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalProject.View.DoctorView.Views"
             mc:Ignorable="d" 
             d:DesignHeight="525" d:DesignWidth="750"
             Background="AliceBlue">
    <Grid>
        <DataGrid
                  Margin="15"
                  ScrollViewer.CanContentScroll="True"
                  RowHeight="30"
                  FontSize="25">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date"
                                    Width="150"/>
                <DataGridTextColumn Header="Type of examination" 
                                    Width="250"/>
                <DataGridTextColumn Header="Doctor"
                                    Width="200"/>
                <DataGridTextColumn Header="Details"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
