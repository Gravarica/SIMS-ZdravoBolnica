<Window x:Class="HospitalProject.View.DoctorView.Views.ExaminationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalProject.View.DoctorView.Views"
        mc:Ignorable="d"
        Title="ExaminationView" Height="600" Width="950">
    <Window.Resources>
        <Style TargetType="Label" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="35,5,10,5"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TextBoxStyle">
            <Setter Property="Margin" Value="10,10,35,10"/>
            <Setter Property="FontSize" Value="15" />
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderBrush" Value="#A4A4E8"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Background="#a4a4e8"
                BorderBrush="#a4afef">
            <TextBlock Text="Examination"
                       FontSize="22"
                       Foreground="White"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="15,0,0,0"/>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Column="0"
                      Header="Anamnesis"
                      FontSize="20"
                      Margin="50,30,50,30"
                      BorderBrush="#a4a4e8">
                <Grid Margin="10,30,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                           Content="Date:"
                           Style="{StaticResource LabelStyle}"/>
                    <DatePicker Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,35,10"
                                FontSize="15"/>

                    <Label Grid.Row="1"
                           Content="Patient:"
                           Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Style="{StaticResource TextBoxStyle}"/>

                    <Label Grid.Row="2"
                           Content="Doctor:"
                           Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Style="{StaticResource TextBoxStyle}"/>


                    <Label Grid.Row="3"
                           Content="Specialization:"
                           Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Style="{StaticResource TextBoxStyle}"/>


                    <Label Grid.Row="4"
                           Content="Type of Examination:"
                           Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="4"
                             Grid.Column="1"
                             Style="{StaticResource TextBoxStyle}"/>


                    <Label Grid.Row="5"
                           Content="Description:"
                           Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="6"
                             Grid.ColumnSpan="2"
                             Margin="35,10,35,10"
                             FontSize="15"
                             BorderBrush="#A4A4E8"/>
                </Grid>
            </GroupBox>
            <Border Grid.Column ="1"
                    BorderThickness="1"
                    BorderBrush="#a4a4e8"
                    Margin="30,43,30,30">
                
            </Border>
        </Grid>
    </Grid>
</Window>
