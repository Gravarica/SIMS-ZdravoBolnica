<Window x:Class="HospitalProject.View.Secretary.SecretaryV.EditAppV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalProject.View.Secretary.SecretaryV"
        
        xmlns:converters="clr-namespace:HospitalProject.View.Converter" xmlns:secretaryvm="clr-namespace:HospitalProject.View.Secretary.SecretaryVM" d:DataContext="{d:DesignInstance Type=secretaryvm:EditAppVM}"
        mc:Ignorable="d"
        Title="Add new appointment" Height="550" Width="952"
        ResizeMode="NoResize"
        >
    <Window.Resources>
        <converters:NameConverter x:Key="NameConverter"/>
    </Window.Resources>

    <Border Background="LightBlue"  >

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="429*"/>
                <ColumnDefinition Width="523*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition Height="81.4"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Edit appointment"  HorizontalAlignment="Left" FontSize="32"  FontWeight="Light" Foreground="Black" Width="281"/>
            <Grid Grid.Row="1"  Margin="10,0,4,81" Grid.RowSpan="2" Height="383" VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition Height="64*"/>
                    <RowDefinition Height="64*"/>
                    <RowDefinition Height="71*"/>
                    <RowDefinition Height="0*"/>
                    <RowDefinition Height="57*"/>
                    <RowDefinition Height="64*"/>
                    <RowDefinition Height="64*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="187"/>
                    <ColumnDefinition Width="46.932"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="Doctor:" HorizontalAlignment="Left"  VerticalAlignment="Top"  FontSize="16" FontFamily="Roboto" Height="27" Width="177" Margin="0,17,0,0" />
                <Label Grid.Column="0" Grid.Row="1" Content="Patient:" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" FontSize="16" FontFamily="Roboto" Width="177" RenderTransformOrigin="0.497,0.743" Margin="0,7,0,0" />
                <Label Grid.Column="0" Grid.Row="2"  Content="Start date:" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top"  FontSize="16" FontFamily="Roboto" Width="177" RenderTransformOrigin="0.483,0.677" Margin="0,10,0,0"/>
                <Label Grid.Column="0" Grid.Row="4"  Content="End date:" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top"  FontSize="16" FontFamily="Roboto" Width="177" RenderTransformOrigin="0.483,0.677" Margin="0,10,0,0"/>

                <Label Grid.Column="0" Grid.Row="5"  Content="Priority:" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top"  FontSize="16" FontFamily="Roboto" Width="177" RenderTransformOrigin="0.483,0.677" Margin="0,10,0,0"/>

                <DatePicker Grid.Row="2"
                                Grid.Column="1"
                                Margin="6,14,26,14"
                                FontSize="16"
                                SelectedDate="{Binding Path = StartDate, Mode=OneWayToSource}" Grid.ColumnSpan="2"/>

                <Border Grid.Row="0" Grid.RowSpan="7" Grid.Column="0" BorderThickness="0,0,2,0" BorderBrush="#50fa7b" Margin="0,10,10,0" />
                <DatePicker Grid.Row="3"
                                Grid.Column="1"
                                Margin="5,15,26,10"
                                FontSize="16"
                                SelectedDate="{Binding Path = EndDate, Mode=OneWayToSource}" Grid.RowSpan="2" Grid.ColumnSpan="2"
                               />
                <RadioButton GroupName="Search" Grid.Row="5" Grid.Column="0" IsChecked="{Binding Path=FlagForValue1, Mode=TwoWay}" Grid.ColumnSpan="3" Margin="182,25,46,2"
                             >Doctor</RadioButton>
                <RadioButton GroupName="Search" Grid.Row="5" Grid.Column="2" IsChecked="{Binding Path=FlagForValue2, Mode=TwoWay}" Margin="67,25,67,0"
                             >Date</RadioButton>
                <TextBox x:Name="TextBox1" 
                         IsEnabled="False"
                         Text="{Binding Path = DoctorData, Converter = {StaticResource NameConverter}}"
                         Grid.Column="1" Margin="20,14,18,0"
                         VerticalAlignment="Top" Height="30" Background="{x:Null}" 
                         BorderBrush="#FFC4C4C5" Grid.ColumnSpan="2" />


            </Grid>
            <Button Content="Update table" HorizontalAlignment="Right" Height="Auto" Width="106" Command="{Binding SubmitCommand}"   Grid.Row="2" Margin="0,18,33,28"/>

            <DataGrid Grid.Column="1"
                      Margin="20,10,20,24"
                      AutoGenerateColumns="False"
                      FontSize="25"
                      ItemsSource="{Binding Path=GeneratedAppointments}"
                      SelectedItem="{Binding SelectedItem}"
                      IsReadOnly="True"
                      SelectionMode="Single" Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date"
                                        Width="3*"
                                        Binding="{Binding Date}"
                                        FontSize="10"/>
                    <DataGridTextColumn Header="Duration"
                                        Width="2*"
                                        Binding="{Binding Duration}"
                                        FontSize="10"/>

                    <DataGridTextColumn Header="Doctor" Binding="{Binding Doctor}"  Width="3*" FontSize="10"/>
                </DataGrid.Columns>

            </DataGrid>

            <Button Content="Save" HorizontalAlignment="Right" Height="Auto" Width="106" Command="{Binding SaveCommand}"   Grid.Row="2" Margin="0,13,34,33" Grid.Column="1"/>
            <TextBox x:Name="TextBox1_Copy" 
                         IsEnabled="False"
                         Text="{Binding Path = PatientData, Converter = {StaticResource NameConverter}}" Margin="218,68,23,0" VerticalAlignment="Top" Height="30" Background="{x:Null}" BorderBrush="#FFC4C4C5" Grid.Row="1" />
        </Grid>
    </Border>
</Window>